extends layout

block content
    section.page-greeting
        h1.page-greeting__header Enter information here to register your account
        form(action='/sign', method='POST', class="registerForm")
            fieldset(name='baseInfo')
                legend.visually-hidden Enter info to sign in
                .form-group
                    label
                        | - Email:
                        input(type="email", name="email",required)
                    label
                        | - Password
                        input(type="password", name="password",required)
                button(type="submit") <  Enter  >